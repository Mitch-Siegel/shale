#include "proc.sbh"

#include "riscv.sbh"

// TODO: define for ncpus
Cpu[4] cpus;


u8 fun cpuid()
{
    return RISCV_readThreadPointer();
}

// Return this CPU's cpu struct.
// Interrupts must be disabled.
Cpu *fun myCpu()
{
    // TODO: u64
    u32 id = cpuid();
    Cpu *c = &cpus[id];
    return c;
}
